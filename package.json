{
  "name": "hello-world",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "new_component": "node -r esbuild-register --unhandled-rejections strict scripts/new_component.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npx tbify yarn"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,sass,html,htm,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/prompts": "^2.0.13",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "esbuild-register": "^2.6.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^6.2.2",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "only-allow": "^1.0.0",
    "prettier": "^2.2.1",
    "prompts": "^2.4.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "tbify": "^1.5.0",
    "typescript": "^4.3.2",
    "typescript-snapshots-plugin": "^1.7.0",
    "vtils": "^4.34.0",
    "vue-template-compiler": "^2.6.11"
  }
}
