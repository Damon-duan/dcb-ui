{
  "name": "@dcbfe/ui",
  "version": "0.0.5",
  "description": "多彩宝移动端 UI 组件库。",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcb-fe/dcb-ui.git"
  },
  "license": "MIT",
  "sideEffects": [
    "*.css"
  ],
  "main": "lib/_cjs/index.js",
  "module": "lib/index.js",
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "postinstall": "patch-package",
    "patch-packages": "patch-package @vuepress/core --exclude \"\\.temp\"",
    "new-component": "haoma run scripts/new_component.js",
    "build": "haoma compile",
    "gen-index": "vgis \"src/**/index.js\" \"docs/.vuepress/demo.js\"",
    "notify-dingtalk": "notify-dingtalk",
    "docs-dev": "kill-port 9988 && concurrently -n dev,sync \"vuepress dev docs\" \"haoma run scripts/sync_docs.js\"",
    "docs-build": "vuepress build docs",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ls-lint && lint-staged",
      "post-merge": "npx tbify yarn"
    }
  },
  "lint-staged": {
    "*.{css,less,scss,sass,html,htm,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,.vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "babel-jest": "^26",
    "ts-jest": "^26"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.6"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.2",
    "@types/fs-extra": "^9.0.11",
    "@types/markdown-it": "^12.0.2",
    "@types/prompts": "^2.0.13",
    "@vue/test-utils": "^1.0.3",
    "chokidar": "^3.5.2",
    "concurrently": "^6.2.0",
    "eslint": "^7",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "haoma": "^3.2.0",
    "husky": "^4",
    "jest": "^26",
    "kill-port": "^1.6.1",
    "lint-staged": "^10",
    "make-synchronous": "^0.1.1",
    "notify-dingtalk": "^1.2.0",
    "only-allow": "^1.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2",
    "prompts": "^2.4.1",
    "sass-loader": "^10",
    "standard-version": "^9",
    "tbify": "^1.5.0",
    "typescript": "^4",
    "typescript-snapshots-plugin": "^1",
    "vscode-generate-index-standalone": "^1.4.0",
    "vtils": "^4.34.0",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "vuepress": "^1.8.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
